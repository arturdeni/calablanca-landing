---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Welcome from '../components/Welcome.astro';
import Characteristics from '../components/Characteristics.astro';
import Passivhaus from '../components/Passivhaus.astro';
import Location from '../components/Location.astro';
import Houses from '../components/Houses.astro';

const lang = 'es';
---

<Layout title="Calablanca Residences · Sitges" lang={lang}>
  <Hero lang={lang} />

  <!-- Welcome Section -->
  <Welcome lang={lang} />

  <!-- Characteristics Section -->
  <Characteristics lang={lang} />

  <!-- Passivhaus Section -->
  <Passivhaus lang={lang} />

  <!-- Location Section -->
  <Location lang={lang} />

  <!-- Houses Section -->
  <Houses lang={lang} />

  <!-- Timeline Section -->
  <section id="timeline" class="timeline">
    <div class="container">
      <!-- TODO: Estado obra - Timeline del estado actual -->
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact" class="contact">
    <div class="container">
      <!-- TODO: Formulario contacto - Nombre, apellido, email, teléfono + checkboxes -->
    </div>
  </section>

  <!-- Calculator Section -->
  <section id="calculator" class="calculator">
    <div class="container">
      <!-- TODO: Simulador hipoteca - Calculadora interactiva -->
    </div>
  </section>
</Layout>

<style>
  section {
    padding: var(--space-xl) 0;
  }

  /* Placeholder styles */
  .timeline {
    background-color: var(--color-white);
  }

  .contact {
    background-color: var(--color-light);
  }

  .calculator {
    background-color: var(--color-white);
  }
</style>
