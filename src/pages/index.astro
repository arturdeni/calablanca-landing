---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Welcome from '../components/Welcome.astro';

const lang = 'es';
---

<Layout title="Calablanca Residences · Sitges" lang={lang}>
  <Hero lang={lang} />

  <!-- Welcome Section -->
  <Welcome lang={lang} />

  <!-- Architecture Section -->
  <section id="architecture" class="architecture">
    <div class="container">
      <!-- TODO: Arquitectura - Fondo oscuro + imagen complejo + texto -->
    </div>
  </section>

  <!-- Passivhaus Section -->
  <section id="passivhaus" class="passivhaus">
    <div class="container">
      <!-- TODO: Passivhaus - Beneficios casa pasiva + imagen interior -->
    </div>
  </section>

  <!-- Location Section -->
  <section id="location" class="location">
    <div class="container">
      <!-- TODO: Ubicación - Mapa Sitges + puntos de interés + distancias -->
    </div>
  </section>

  <!-- Houses Section -->
  <section id="houses" class="houses">
    <div class="container">
      <!-- TODO: Elige tu casa - Tabla con tipos de vivienda -->
    </div>
  </section>

  <!-- Timeline Section -->
  <section id="timeline" class="timeline">
    <div class="container">
      <!-- TODO: Estado obra - Timeline del estado actual -->
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact" class="contact">
    <div class="container">
      <!-- TODO: Formulario contacto - Nombre, apellido, email, teléfono + checkboxes -->
    </div>
  </section>

  <!-- Calculator Section -->
  <section id="calculator" class="calculator">
    <div class="container">
      <!-- TODO: Simulador hipoteca - Calculadora interactiva -->
    </div>
  </section>
</Layout>

<style>
  section {
    padding: var(--space-xl) 0;
  }

  /* Placeholder styles */
  .architecture {
    background-color: var(--color-dark);
    color: var(--color-white);
  }

  .passivhaus {
    background-color: var(--color-secondary);
    color: var(--color-white);
  }

  .location {
    background-color: var(--color-white);
  }

  .houses {
    background-color: var(--color-accent);
  }

  .timeline {
    background-color: var(--color-white);
  }

  .contact {
    background-color: var(--color-light);
  }

  .calculator {
    background-color: var(--color-white);
  }
</style>
