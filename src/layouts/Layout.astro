---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Loader from "../components/Loader.astro";
import "../styles/global.css";

const { title = "Calablanca Residences · Sitges", lang = "es" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload fonts for performance -->
    <link rel="preload" href="/fonts/lora-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/roboto-regular.woff2" as="font" type="font/woff2" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Calablanca Residences - Viviendas de lujo en Sitges con certificación Passivhaus"
    />

    <!-- Force scroll to top on page load - must be in head to run before browser restores scroll -->
    <script is:inline>
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
      window.scrollTo(0, 0);
    </script>
  </head>
  <body>
    <Loader />
    <Header lang={lang} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} />

    <script>
      import "../scripts/loader.js";
    </script>
  </body>
</html>

<style is:global>
  /* Bloquear scroll durante la carga */
  body.is--loading {
    overflow: hidden;
    height: 100dvh;
  }
</style>
