---
const { lang = 'es' } = Astro.props;
import { useTranslations } from '../i18n';
const t = useTranslations(lang);

const isEnglish = lang === 'en';
const toggleLangUrl = isEnglish ? '/' : '/en/';
---

<header class="header">
  <div class="container">
    <div class="header__inner">
      <a href={`/${lang === 'en' ? 'en/' : ''}`} class="header__logo">
        <span class="header__logo-text">Calablanca Residences</span>
      </a>

      <nav class="header__nav">
        <ul class="header__nav-list">
          <li><a href="#residence">{t('nav.residence')}</a></li>
          <li><a href="#location">{t('nav.location')}</a></li>
          <li><a href="#houses">{t('nav.houses')}</a></li>
          <li><a href="#calculator">{t('nav.calculator')}</a></li>
          <li><a href="#contact">{t('nav.contact')}</a></li>
          <li><a href={toggleLangUrl}>{isEnglish ? 'ES' : 'EN'}</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: transform 0.3s ease;
  }

  /* Estado inicial: sin blend, texto blanco puro */
  .header--top {
    mix-blend-mode: normal;
  }

  .header--top .header__logo-text,
  .header--top .header__nav-list a {
    color: var(--color-white);
  }

  /* Estado scrolled: con blend para contraste */
  .header--scrolled {
    mix-blend-mode: exclusion;
  }

  /* Header oculto al hacer scroll hacia abajo */
  .header--hidden {
    transform: translateY(-100%);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md) 0;
    gap: var(--space-md);
  }

  .header__logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: #e0e0e0;
    transition: color var(--transition-fast);
  }

  .header__nav {
    display: none;
  }

  .header__nav-list {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    align-items: center;
  }

  .header__nav-list a {
    font-size: var(--font-size-small);
    font-weight: 500;
    color: #e0e0e0;
    transition: color var(--transition-fast), opacity var(--transition-fast);

    &:hover {
      opacity: 0.8;
    }
  }

  @media (min-width: 768px) {
    .header__nav {
      display: block;
    }
  }
</style>

<script>
  const header = document.querySelector('.header');
  let lastScrollY = 0;
  const scrollThreshold = 50;

  function handleScroll() {
    const currentScrollY = window.scrollY;

    // Estado top vs scrolled
    if (currentScrollY <= scrollThreshold) {
      header.classList.add('header--top');
      header.classList.remove('header--scrolled');
      header.classList.remove('header--hidden');
    } else {
      header.classList.remove('header--top');
      header.classList.add('header--scrolled');

      // Mostrar/ocultar según dirección del scroll
      if (currentScrollY > lastScrollY) {
        // Scroll hacia abajo: ocultar
        header.classList.add('header--hidden');
      } else {
        // Scroll hacia arriba: mostrar
        header.classList.remove('header--hidden');
      }
    }

    lastScrollY = currentScrollY;
  }

  window.addEventListener('scroll', handleScroll);
  handleScroll();
</script>
