---
const { lang = 'es' } = Astro.props;
import { useTranslations } from '../i18n';
const t = useTranslations(lang);

const isEnglish = lang === 'en';
const toggleLangUrl = isEnglish ? '/' : '/en/';
---

<header class="header">
  <div class="container">
    <div class="header__inner">
      <a href={`/${lang === 'en' ? 'en/' : ''}`} class="header__logo">
        <span class="header__logo-text">Calablanca Residences</span>
      </a>

      <nav class="header__nav">
        <ul class="header__nav-list">
          <li><a href="#residence">{t('nav.residence')}</a></li>
          <li><a href="#location">{t('nav.location')}</a></li>
          <li><a href="#houses">{t('nav.houses')}</a></li>
          <li><a href="#calculator">{t('nav.calculator')}</a></li>
          <li><a href="#contact">{t('nav.contact')}</a></li>
          <li><a href={toggleLangUrl}>{isEnglish ? 'ES' : 'EN'}</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: transparent;
    transition: background-color var(--transition-base);
  }

  .header--scrolled {
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
  }

  .header--scrolled .header__logo-text,
  .header--scrolled .header__nav-list a {
    color: var(--color-primary);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md) 0;
    gap: var(--space-md);
  }

  .header__logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-white);
    transition: color var(--transition-fast);
  }

  .header__nav {
    display: none;
  }

  .header__nav-list {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    align-items: center;
  }

  .header__nav-list a {
    font-size: var(--font-size-small);
    font-weight: 500;
    color: var(--color-white);
    transition: color var(--transition-fast), opacity var(--transition-fast);

    &:hover {
      opacity: 0.8;
    }
  }

  @media (min-width: 768px) {
    .header__nav {
      display: block;
    }
  }
</style>

<script>
  const header = document.querySelector('.header');

  function handleScroll() {
    if (window.scrollY > 50) {
      header.classList.add('header--scrolled');
    } else {
      header.classList.remove('header--scrolled');
    }
  }

  window.addEventListener('scroll', handleScroll);
  handleScroll();
</script>
