---
const { lang = "es", image = "/images/hero.webp" } = Astro.props;
import { useTranslations } from "../i18n";
const t = useTranslations(lang);
---

<section class="hero" data-hero>
  <div class="hero__background">
    <img src={image} alt="Cala Blanca Residences" />
  </div>

  <div class="hero__content container">
    <div class="hero__text">
      <h1 class="hero__title" data-hero-title>{t("hero.title")}</h1>
      <h3 class="hero__subtitle" data-hero-subtitle>{t("hero.subtitle")}</h3>
    </div>
    <p class="hero__intro" data-hero-intro>{t("hero.description")}</p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: stretch;
    color: var(--color-white);
  }

  .hero__background {
    position: absolute;
    inset: 0;
    z-index: -1;
    background-color: var(--color-dark);

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    &::after {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.45) 0%,
        rgba(0, 0, 0, 0.25) 50%,
        rgba(0, 0, 0, 0.5) 100%
      );
    }
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    padding-top: var(--space-xxl);
    padding-bottom: var(--space-xl);
    min-height: 100vh;
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: var(--space-sm);
    max-width: 75%;

    & > :global(*) {
      margin: -7px -6px;
      padding: 7px 6px;
    }
  }

  .hero__subtitle {
    opacity: 0.9;
  }

  .hero__intro {
    font-size: var(--font-size-body);
    line-height: 1.35;
    max-width: 300px;
  }

  @media (min-width: 1110px) {
    .hero__content {
      justify-content: flex-start;
      min-height: auto;
    }

    .hero__text {
      padding: 60px 190px 0;
    }

    .hero__intro {
      margin-top: var(--space-lg);
      padding-left: 190px;
      max-width: 490px;
    }
  }

  @media (max-width: 640px) {
    .hero__subtitle {
      font-size: 1.15rem;
    }
  }
</style>
