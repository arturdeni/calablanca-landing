---
const { lang = "es" } = Astro.props;

const translations = await import(`../i18n/${lang}.json`);
const t = translations.characteristics;

const features = [
  { id: "parking", icon: "/images/icons/parking.svg" },
  { id: "pool", icon: "/images/icons/piscina.svg" },
  { id: "chill", icon: "/images/icons/chillout.svg" },
  { id: "garden", icon: "/images/icons/jardineria.svg" },
  { id: "closets", icon: "/images/icons/armarios.svg" },
  { id: "storage", icon: "/images/icons/trastero.svg" },
  { id: "aerothermal", icon: "/images/icons/aerotermia.svg" },
  { id: "terraces", icon: "/images/icons/terrazas.svg" },
];
---

<section class="characteristics" id="characteristics">
  <div class="characteristics__background">
    <img
      src="/images/characteristics-bg.webp"
      alt=""
      class="characteristics__bg-image"
      loading="lazy"
    />
  </div>

  <div class="characteristics__content">
    <div class="characteristics__header">
      <h2 class="characteristics__title" data-text-reveal="words">{t.title}</h2>

      <ul class="characteristics__features">
        {
          features.map((feature) => (
            <li class="characteristics__feature">
              <span class="characteristics__feature-icon">
                <img src={feature.icon} alt="" />
              </span>
              <span class="characteristics__feature-label">
                {t.features[feature.id]}
              </span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>

<style>
  .characteristics {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    overflow: hidden;
  }

  /* Background image */
  .characteristics__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .characteristics__background::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.65) 0%,
      rgba(0, 0, 0, 0.45) 40%,
      rgba(0, 0, 0, 0.35) 100%
    );
  }

  .characteristics__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center bottom;
  }

  /* Content overlay */
  .characteristics__content {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: var(--space-lg) var(--content-padding);
  }

  .characteristics__header {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .characteristics__title {
    color: var(--color-white);
  }

  /* Features grid */
  .characteristics__features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .characteristics__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
  }

  .characteristics__feature-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;

    & img {
      width: 100%;
      height: 85%;
      object-fit: contain;
    }
  }

  .characteristics__feature-label {
    font-family: var(--font-heading);
    font-size: 0.75rem;
    color: var(--color-white);
    line-height: 1.3;
    max-width: 110px;
  }

  /* Tablet */
  @media (min-width: 865px) {
    .characteristics__background::after {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.4) 0%,
        rgba(0, 0, 0, 0.15) 40%,
        rgba(0, 0, 0, 0.1) 100%
      );
    }

    .characteristics__header {
      flex-direction: row;
      align-items: flex-start;
      justify-content: space-between;
      gap: var(--space-md);
    }

    .characteristics__title {
      flex-shrink: 0;
      max-width: 400px;
    }

    .characteristics__features {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-sm);
    }

    .characteristics__feature-label {
      font-size: 0.8125rem;
    }
  }

  /* Desktop */
  @media (min-width: 1370px) {
    .characteristics__features {
      grid-template-columns: repeat(8, 1fr);
      margin-top: var(--space-sm);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const features = document.querySelectorAll(".characteristics__feature");

  if (features.length) {
    // Different start values for mobile vs desktop
    const isMobile = window.innerWidth < 768;

    gsap.to(features, {
      opacity: 1,
      y: 0,
      duration: 0.6,
      stagger: 0.1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".characteristics__features",
        start: isMobile ? "top 60%" : "top 80%",
        once: true,
      },
    });
  }
</script>
