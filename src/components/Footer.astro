---
const { lang = 'es' } = Astro.props;
---

<footer class="footer">
  <div class="footer__container">
    <img
      src="/images/header-logo.svg"
      alt="Calablanca Residences"
      class="footer__logo"
    />
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-dark);
    padding: var(--space-lg) 0;
  }

  .footer__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer__logo {
    width: 20%;
    max-width: 150px;
    min-width: 100px;
    height: auto;
  }
</style>
