---
const { lang = 'es' } = Astro.props;
import { useTranslations } from '../i18n';
const t = useTranslations(lang);
---

<footer class="footer">
  <div class="container">
    <div class="footer__inner">
      <div class="footer__logo">
        <span class="footer__logo-text">Calablanca<br>Residences</span>
      </div>

      <div class="footer__partners">
        <p class="footer__partners-label">{t('footer.partners')}</p>
        <div class="footer__partners-logos">
          <!-- Los logos se añadirán después -->
          <span>AX Partners</span>
          <span>Incus Living</span>
          <span>SPPG</span>
          <span>Passivhaus</span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-dark);
    color: var(--color-white);
    padding: var(--space-xl) 0 var(--space-md);
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    align-items: center;
    text-align: center;
  }

  .footer__logo-text {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.2;
  }

  .footer__partners-label {
    font-size: var(--font-size-small);
    margin-bottom: var(--space-sm);
    opacity: 0.7;
  }

  .footer__partners-logos {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
    align-items: center;

    & span {
      font-size: var(--font-size-small);
      opacity: 0.8;
    }
  }

  @media (min-width: 768px) {
    .footer__inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
</style>
